@model IEnumerable<RankSaldoAtual>
@{
    var baseDashboard = ViewBag.BaseDashboard;
}
<h1 class="text-center text-primary">WebInvest</h1>
@if (User.IsInRole("Usuario_Comum"))
{
    <div class="row">
        <div class="col-md-6 col-xl-3 mb-4">
            <div class="card shadow border-left-success py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1"><span>Saldo Atual</span></div>
                            @if (baseDashboard.SaldoAtual < 0)
                            {
                                <div class="text-danger font-weight-bold h5 mb-0"><span>$ @baseDashboard.SaldoAtual</span></div>
                            }
                            else
                            {
                                <div class="text-success font-weight-bold h5 mb-0"><span>$ @baseDashboard.SaldoAtual</span></div>
                            }

                        </div>
                        <div class="col-auto"><i class="fas fa-hand-holding-usd fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3 mb-4">
            <div class="card shadow border-left-primary py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1"><span>Saldo Investido</span></div>
                            @if (baseDashboard.SaldoInvestido < 0)
                            {
                                <div class="text-danger font-weight-bold h5 mb-0"><span>$ @baseDashboard.SaldoInvestido</span></div>
                            }
                            else
                            {
                                <div class="text-success font-weight-bold h5 mb-0"><span>$ @baseDashboard.SaldoInvestido</span></div>
                            }
                        </div>
                        <div class="col-auto"><i class="fas fa-money-bill-wave fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3 mb-4">
            <div class="card shadow border-left-info py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1"><span>Compras</span></div>
                            <div class="text-secondary font-weight-bold h5 mb-0"><span>@baseDashboard.Compras</span></div>
                        </div>
                        <div class="col-auto"><i class="fas fa-file-alt fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3 mb-4">
            <div class="card shadow border-left-warning py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1"><span>Vendas</span></div>
                            <div class="text-secondary font-weight-bold h5 mb-0"><span>@baseDashboard.Vendas</span></div>
                        </div>
                        <div class="col-auto"><i class="fas fa-file-alt fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="card shadow">
            <div class="card-header py-3">
                <p class="text-primary m-0 font-weight-bold">Rank - Maiores Saldos em Conta</p>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center">Username</th>
                            <th class="text-center">Saldo Atual</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @Model)
                        {
                            <tr>

                                <td class="text-center">@item.Username</td>
                                <td class="text-center">$ @item.Saldo</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}
else
{
    <div class="row justify-content-center align-items-center">
        <div class="card col-8">
            <div class="card-subtitle">
                <div class="alert alert-secondary" role="alert">
                    Necessário realizar identificação para acesso ao sistema!
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="card col-5 mb-2 mr-2 alert-secondary" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="text-info">Cadastre-se<i class="fas fa-user-plus ml-2"></i></h5>
                        <p class="card-text">Crie sua conta e começa a utilizar o sistema hoje mesmo.</p>
                    </div>
                    <a href="#" class="btn btn-primary mb-2" onclick="@("window.location.href='" + @Url.Action("Cadastrar", "Usuario") + "'");">Cadastrar</a>
                </div>

                <div class="card col-5 mb-2 mr-2 alert-secondary" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="text-info">Realizar Login<i class="fas fa-sign-in-alt ml-2"></i></h5>
                        <p class="card-text">Retorne ao seu cadastro e lucros.</p>
                    </div>
                    <a href="#" class="btn btn-primary mb-2" onclick="@("window.location.href='" + @Url.Action("Login", "Usuario") + "'");">Entrar</a>
                </div>
            </div>
        </div>
    </div>
}

<script src="//code.jquery.com/jquery-3.5.1.js"></script>
<script src="//cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>
<script src="//cdn.datatables.net/1.11.1/js/dataTables.bootstrap4.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="//cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
<script src="//cdn.datatables.net/buttons/2.0.0/js/buttons.bootstrap4.min.js"></script>
<script src="//cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
<script src="//cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js"></script>
<script src="//cdn.datatables.net/buttons/2.0.0/js/buttons.colVis.min.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#myTable').DataTable({
            "order": [[1, "desc"]],
            "language": {
                "lengthMenu": "Mostrando _MENU_ registros por página",
                "zeroRecords": "Nada encontrado",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "infoFiltered": "(filtrado de _MAX_ registros no total)"
            }
        });
    });</script>