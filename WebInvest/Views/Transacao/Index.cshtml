@model IEnumerable<OrdemInvestimento>
@{
    ViewData["Title"] = "Transações";
}

<div class="row d-flex h-100">
    <div class="container">
        <h3 class="text-left pl-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-file-bar-graph-fill" viewBox="0 0 16 16">
                <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-2 11.5v-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-2.5.5a.5.5 0 0 1-.5-.5v-4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5h-1zm-3 0a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-1z"></path>
            </svg>
            Transações realizadas
        </h3>
    </div>
</div>
<span class="ui-icon ui-icon-arrowthick-1-n"></span>
<br />
<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-2 col-lg-3 col-lg-11 col-lg-5 col-lg-8 col-sm-5">
        <table class="table table-striped table-bordered table-hover" id="myTable">
            <thead>
                <tr>
                    <th scope="col">Sigla</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Valor Un.</th>
                    <th scope="col">Valor Total</th>
                    <th scope="col">Data Realização</th>
                    <th scope="col">Status Ordem</th>
                    <th scope="col">Tipo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Sigla</td>
                        <td>@item.Quantidade</td>
                        <td>R$@item.ValorUn</td>
                        <td>R$@item.ValorTotal</td>
                        <td>@item.DataHora</td>
                        <td>@item.StatusOrdem</td>
                        <td>@item.Tipo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#myTable').DataTable({
            "language": {
                "lengthMenu": "Mostrando _MENU_ registros por página",
                "zeroRecords": "Nada encontrado",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "infoFiltered": "(filtrado de _MAX_ registros no total)"
            }
        });
    });
</script>